rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSelf(userId);
      allow write: if false;
    }

    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow write: if false;
    }

    match /friendships/{friendshipId} {
      allow read: if isAuthenticated() && (
        resource.data.user_id == request.auth.uid ||
        resource.data.friend_id == request.auth.uid
      );
      allow write: if false;
    }

    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /group_members/{groupMemberId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /expense_participants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /settlements/{settlementId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /invitations/{invitationId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /payment_reminders/{reminderId} {
      allow read: if isAuthenticated() && (
        resource.data.from_user_id == request.auth.uid ||
        resource.data.to_user_id == request.auth.uid
      );
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
